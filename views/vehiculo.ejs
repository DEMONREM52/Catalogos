<style>
    body {
        padding: 0 150px 150px 150px;

    }

    .container-agregar {
        transform: scale(0.80);
    }

    /* Estilos para input, select y textarea */
    .form-container input,
    .form-container select,
    .form-container textarea {
        color: #333;
        background: #ecf0f3;
        font-size: 15px;
        height: 58px;
        padding: 20px;
        letter-spacing: 1px;
        border: none;
        border-radius: 50px;
        box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px #fff;
        display: inline-block;
        transition: all 0.3s ease 0s;
        width: 100%;
    }

    .form-container input:focus,
    .form-container select:focus,
    .form-container textarea:focus {
        box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px #fff;
        outline: none;
    }

    .form-container input::placeholder,
    .form-container select::placeholder,
    .form-container textarea::placeholder {
        color: #808080;
        font-size: 14px;
    }

    /* Color of the links BEFORE scroll */
    .navbar-scroll .nav-link,
    .navbar-scroll .navbar-toggler-icon,
    .navbar-scroll .navbar-brand {
        color: #fff;
    }

    /* Color of the links AFTER scroll */
    .navbar-scrolled .nav-link,
    .navbar-scrolled .navbar-toggler-icon,
    .navbar-scrolled .navbar-brand {
        color: #fff;
    }

    /* Color of the navbar AFTER scroll */
    .navbar-scroll,
    .navbar-scrolled {
        background-color: #cbbcb1;
    }

    .mask-custom {
        backdrop-filter: blur(5px);
        background-color: rgba(255, 255, 255, .15);
    }

    .navbar-brand {
        font-size: 1.75rem;
        letter-spacing: 3px;
    }

    .navbar-custom {
        background-color: #76ABAE;
        /* Color de fondo original */
    }

    #navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background-color: #76ABAE;
        padding: 10px 0;
        transition: top 0.3s;
        z-index: 1000;
    }

    #content {
        padding-top: 50px;
        /* Ajusta esto según la altura de tu barra de navegación */
    }

    .titulo {
        margin-top: 100px;
    }
</style>



<body id="content">


    <nav id="navbar" class="navbar navbar-expand-lg navbar-light fixed-top mask-custom shadow-0 navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="https://i.ibb.co/nQ0JprM/logo-Photoroom-png-Photoroom.png" alt="Logo" width="100" height="60">
            </a>
            <div class=" collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Inicio</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="text-center titulo">
        <h1>Bienvenid@, <%= usuario.nombre %>!</h1>
        <p>Gracias por trabajar con nosotros</p>
    </div>


    <div class="container mt-5 container-agregar">
        <h2>Gestión de Vehículos</h2>
        <form action="/agregar-vehiculo" method="POST" class="form-container">
            <!-- Agregar campo oculto para el nombre de usuario -->
            <input type="hidden" id="nombreUsuario" name="nombreUsuario" value="<%= usuario.nombre %>">
            <div class="form-group">
                <label for="marca">Marca</label>
                <select class="form-control" id="marca" name="marca" required>
                    <option value="">Selecciona una marca</option>
                    <option value="Toyota">Toyota</option>
                    <option value="BMW">BMW</option>
                    <option value="Mercedez-Benz">Mercedez-Benz</option>
                    <option value="Chevrolet">Chevrolet</option>
                    <option value="Renault">Renault</option>
                    <option value="Nissan">Nissan</option>
                </select>
            </div>
            <div class="form-group">
                <label for="modelo">Nombre</label>
                <input type="text" class="form-control" id="modelo" name="modelo" required>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="certificacion">Certificación</label>
                <select class="form-control" id="certificacion" name="certificacion" required>
                    <% if (usuario && usuario.rol==='admin' || usuario.rol==='superadmin' ) { %>
                        <option value="nuevo">Nuevo</option>
                        <option value="usado">Usado</option>
                        <% } else { %>
                            <option value="usado">Usado</option>
                            <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="precio">Precio (SIN COMAS NI PUNTOS)</label>
                <input type="number" class="form-control" id="precio" name="precio" required pattern="[0-9]*"
                    title="Ingrese solo números">
            </div>

            <div class="mb-3">
                <label for="imagen" class="form-label">DIRECCIÓN DE LA IMAGEN</label>
                <input type="text" class="form-control" id="imagen" name="imagen" required>
                <img id="preview" alt="Previsualización de la imagen" class="img-fluid mt-2" style="max-height: 200px;">
            </div>
            <button type="submit" class="btn btn-primary">Agregar Vehículo</button>
        </form>
    </div>

</body>


<script>
    // Manejar el cambio en los checkboxes de las marcas
    document.querySelectorAll('.form-check-input').forEach(function (checkbox) {
        checkbox.addEventListener('change', actualizarFiltro);
    });

    // Manejar el cambio en el select de certificación
    document.getElementById('filtroCertificacion').addEventListener('change', actualizarFiltro);

    // Función para actualizar el filtro
    function actualizarFiltro() {
        var marcasSeleccionadas = [];
        document.querySelectorAll('.form-check-input:checked').forEach(function (checkbox) {
            marcasSeleccionadas.push(checkbox.value);
        });

        var certificacionSeleccionada = document.getElementById('filtroCertificacion').value;

        // Mostrar/ocultar los divs de los vehículos según las marcas y certificación seleccionadas
        document.querySelectorAll('.vehiculo').forEach(function (vehiculo) {
            var marca = vehiculo.getAttribute('data-marca');
            var certificacion = vehiculo.getAttribute('data-certificacion');

            if ((marcasSeleccionadas.length === 0 || marcasSeleccionadas.includes(marca)) &&
                (certificacionSeleccionada === 'todos' || certificacion === certificacionSeleccionada)) {
                vehiculo.style.display = 'block';
            } else {
                vehiculo.style.display = 'none';
            }
        });
    }

</script>

<script>
    // Manejar el cambio en los checkboxes
    document.querySelectorAll('.form-check-input').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            // Obtener las marcas seleccionadas
            var marcasSeleccionadas = [];
            document.querySelectorAll('.form-check-input:checked').forEach(function (checkbox) {
                marcasSeleccionadas.push(checkbox.value);
            });

            // Mostrar/ocultar los divs de los vehículos según las marcas seleccionadas
            document.querySelectorAll('.vehiculo').forEach(function (vehiculo) {
                var marca = vehiculo.getAttribute('data-marca');
                if (marcasSeleccionadas.length === 0 || marcasSeleccionadas.includes(marca)) {
                    vehiculo.style.display = 'block';
                } else {
                    vehiculo.style.display = 'none';
                }
            });
        });
    });
</script>

<!-- JavaScript para ocultar el contenido -->
<script>
    document.getElementById('showContentButton').addEventListener('click', function () {
        var confirmation = confirm("¿Estás seguro de que ya sabes cómo usarlo? Esta información no volverá a mostrarse.");

        if (confirmation) {
            document.getElementById('contentToShow').classList.add('d-none');
            document.getElementById('showContentButton').classList.add('d-none');
        }
    });
</script>

<script>
    // Obtener el campo de entrada y la imagen de previsualización
    const inputImagen = document.getElementById('imagen');
    const imagenPreview = document.getElementById('preview');

    // Agregar un evento de cambio al campo de entrada
    inputImagen.addEventListener('input', () => {
        // Obtener el valor del campo de entrada
        const imageUrl = inputImagen.value;

        // Actualizar la fuente de la imagen de previsualización con la URL ingresada
        imagenPreview.src = imageUrl;
    });
</script>

<script>
    let lastScrollTop = 0;

    window.addEventListener("scroll", function () {
        let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

        if (currentScroll > lastScrollTop) {
            // Descendiendo
            document.getElementById("navbar").classList.add("navbar-hidden");
        } else {
            // Ascendiendo
            document.getElementById("navbar").classList.remove("navbar-hidden");
        }
        lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
    }, false);
</script>

<script>
    var prevScrollpos = window.pageYOffset;
    window.onscroll = function () {
        var currentScrollPos = window.pageYOffset;
        if (prevScrollpos > currentScrollPos) {
            document.getElementById("navbar").style.top = "0";
        } else {
            document.getElementById("navbar").style.top = "-54px"; /* Ajusta esto según la altura de tu barra de navegación */
        }
        prevScrollpos = currentScrollPos;
    }
</script>



<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Vehículos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<style>
    body,
    html {
        transform: scale(0.90);
    }

    /* Estilos para input, select y textarea */
    .form-container input,
    .form-container select,
    .form-container textarea {
        color: #333;
        background: #ecf0f3;
        font-size: 15px;
        height: 50px;
        /* ajusta el alto según sea necesario */
        padding: 20px;
        letter-spacing: 1px;
        border: none;
        border-radius: 50px;
        box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px #fff;
        display: inline-block;
        transition: all 0.3s ease 0s;
        width: 100%;
        /* Ajusta el ancho según sea necesario */
    }

    .form-container input:focus,
    .form-container select:focus,
    .form-container textarea:focus {
        box-shadow: inset 6px 6px 6px #cbced1, inset -6px -6px 6px #fff;
        outline: none;
    }

    .form-container input::placeholder,
    .form-container select::placeholder,
    .form-container textarea::placeholder {
        color: #808080;
        font-size: 14px;
    }
</style>

<body>



    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img src="https://i.etsystatic.com/40485572/r/il/3859a8/4608964215/il_570xN.4608964215_qtjf.jpg" width="50px"
            height="50px" style="border-radius: 50%;">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link text-gray-800 hover:text-gray-600 px-4 py-2" href="/">Inicio <span
                            class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="text-center">
        <h1>Bienvenid@, <%= usuario.nombre %>!</h1>
        <p>Gracias por trabajar con nosotros</p>
    </div>


    <div class="container mt-5">
        <h2>Gestión de Vehículos</h2>

        <div class="form-bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-container">
                            <form action="/agregar-vehiculo" method="POST">

                                <!-- Agregar campo oculto para el nombre de usuario -->
                                <input type="hidden" id="nombreUsuario" name="nombreUsuario"
                                    value="<%= usuario.nombre %>">

                                <div class="form-group">
                                    <label for="marca">Marca</label>
                                    <select class="form-control" id="marca" name="marca" required>
                                        <option value="">Selecciona una marca</option>
                                        <option value="Toyota">Toyota</option>
                                        <option value="BMW">BMW</option>
                                        <option value="Mercedez-Benz">Mercedez-Benz</option>
                                        <option value="Chevrolet">Chevrolet</option>
                                        <option value="Renault">Renault</option>
                                        <option value="Nissan">Nissan</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="modelo">Nombre</label>
                                    <input type="text" class="form-control" id="modelo" name="modelo" required>
                                </div>
                                <div class="form-group">
                                    <label for="descripcion">Descripción</label>
                                    <textarea class="form-control" id="descripcion" name="descripcion" rows="3"
                                        required></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="certificacion">Certificación</label>
                                    <select class="form-control" id="certificacion" name="certificacion" required>
                                        <% if (usuario && usuario.rol==='admin' || usuario.rol==='superadmin' ) { %>
                                            <option value="nuevo">Nuevo</option>
                                            <option value="usado">Usado</option>
                                            <% } else { %>
                                                <option value="usado">Usado</option>
                                                <% } %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="precio">Precio (SIN CARACTERES ESPECIALES)</label>
                                    <input type="number" class="form-control" id="precio" name="precio" required>
                                </div>

                                <div class="mb-3">
                                    <label for="imagen" class="form-label">DIRECCIÓN DE LA IMAGEN</label>
                                    <input type="text" class="form-control" id="imagen" name="imagen" required>
                                    <img id="preview" alt="Previsualización de la imagen" class="img-fluid mt-2"
                                        style="max-height: 200px;">
                                </div>
                                <button type="submit" class="btn btn-primary">Agregar Vehículo</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aquí se agregará el contenido ocultable -->
        <div class="mt-5" id="contentToShow">
            <h1>No sabes cómo sacar la dirección de la imagen?</h1>
            <h6>Te enseñamos cómo hacerlo
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                    style="fill: rgba(0, 0, 0, 1);transform: msFilter">
                    <path
                        d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z">
                    </path>
                    <path
                        d="M14.828 14.828a3.988 3.988 0 0 1-2.02 1.09 4.108 4.108 0 0 1-1.616 0 4.103 4.103 0 0 1-.749-.232 4.161 4.161 0 0 1-.679-.368 4.115 4.115 0 0 1-1.082-1.082l-1.658 1.117c.215.319.462.619.733.889a5.991 5.991 0 0 0 8.485.002c.272-.271.52-.571.734-.891l-1.658-1.117c-.143.211-.307.41-.49.592z">
                    </path>
                    <circle cx="8.5" cy="10.5" r="1.5"></circle>
                    <path d="M15.5 10c-2 0-2.5 2-2.5 2h5s-.501-2-2.5-2z"></path>
                </svg>
                <!-- Botón para ocultar el contenido -->
                <button id="showContentButton" class="btn btn-primary">Ya sé cómo usarlo</button>
                <a href="https://imgbb.com/login" class="btn btn-success" target="_blank">Subir Imagen</a>
            </h6>
        </div>






        <h3 class="mt-5">Vehículos Agregados</h3>


        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Toyota" value="Toyota">
            <label class="form-check-label" for="Toyota">Toyota</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="BMW" value="BMW">
            <label class="form-check-label" for="BMW">BMW</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Mercedez-Benz" value="Mercedez-Benz">
            <label class="form-check-label" for="Mercedez-Benz">Mercedez-Benz</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Chevrolet" value="Chevrolet">
            <label class="form-check-label" for="Chevrolet">Chevrolet</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Renault" value="Renault">
            <label class="form-check-label" for="Renault">Renault</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="Nissan" value="Nissan">
            <label class="form-check-label" for="Nissan">Nissan</label>
        </div>
        <% if (usuario && usuario.rol==='superadmin' ) { %>
            <div class="form-group">
                <label for="filtroCertificacion">Filtrar por Certificación:</label>
                <select class="form-control" id="filtroCertificacion">
                    <option value="todos">Todos</option>
                    <option value="nuevo">Nuevo</option>
                    <option value="usado">Usado</option>
                </select>
            </div>
            <% } %>



                <% if (usuario && (usuario.rol==='admin' || usuario.rol==='vendedor' )) { %>
                    <h1 class="mt-5 text-center">VEHÍCULOS NUEVOS</h1>
                    <% } %>

                        <div class="row mt-3" id="vehiculosNuevos">
                            <% if (usuario && usuario.rol==='superadmin' ) { %>
                                <% vehiculos.forEach((vehiculo)=> { %>
                                    <div class="col-md-4 mb-4 vehiculo" data-marca="<%= vehiculo.marca %>"
                                        data-certificacion="<%= vehiculo.certificacion %>">
                                        <div class="card">
                                            <img src="<%= vehiculo.imagen %>" class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%= vehiculo.marca %> - <%= vehiculo.nombre %>
                                                </h5>
                                                <p class="card-text descripcion">
                                                    <%= vehiculo.descripcion %>
                                                </p>
                                                <b>
                                                    <p class="card-text">
                                                        Precio: $<%= vehiculo.precio.toLocaleString('es-CO') %> COP</p>
                                                </b>
                                                <p class="card-text">Agregado por: <b>
                                                        <%= vehiculo.UsuarioAgrego %>
                                                    </b></p>
                                                <p class="card-text">Certificación: <b>
                                                        <%= vehiculo.certificacion %>
                                                    </b></p>
                                                <div class="d-flex align-items-center">
                                                    <a href="/editar-vehiculo/<%= vehiculo.id %>"
                                                        class="btn btn-primary mr-3">Editar</a>
                                                    <form action="/borrar-vehiculo/<%= vehiculo.id %>" method="POST"
                                                        class="d-inline">
                                                        <button type="submit" class="btn btn-danger">Borrar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <% if (usuario) { %>
                                                <% vehiculos.forEach((vehiculo)=> { %>
                                                    <% if (vehiculo.UsuarioAgrego===usuario.nombre &&
                                                        vehiculo.certificacion==="nuevo" ) { %>
                                                        <div class="col-md-4 mb-4 vehiculo"
                                                            data-marca="<%= vehiculo.marca %>">
                                                            <div class="card">
                                                                <img src="<%= vehiculo.imagen %>" class="card-img-top"
                                                                    alt="...">
                                                                <div class="card-body">
                                                                    <h5 class="card-title">
                                                                        <%= vehiculo.marca %> - <%= vehiculo.nombre %>
                                                                    </h5>
                                                                    <p class="card-text descripcion">
                                                                        <%= vehiculo.descripcion %>
                                                                    </p>
                                                                    <b>
                                                                        <p class="card-text">
                                                                            Precio: $<%=
                                                                                vehiculo.precio.toLocaleString('es-CO')
                                                                                %> COP</p>
                                                                    </b>
                                                                    <div class="d-flex align-items-center">
                                                                        <a href="/editar-vehiculo/<%= vehiculo.id %>"
                                                                            class="btn btn-primary mr-3">Editar</a>
                                                                        <form
                                                                            action="/borrar-vehiculo/<%= vehiculo.id %>"
                                                                            method="POST" class="d-inline">
                                                                            <button type="submit"
                                                                                class="btn btn-danger">Borrar</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                            <% }); %>
                                                                <% } else { %>
                                                                    <p>No se ha iniciado sesión.</p>
                                                                    <% } %>
                                                                        <% } %>

                        </div>


                        <% if (usuario && (usuario.rol==='admin' || usuario.rol==='vendedor' )) { %>
                            <h1 class="mt-5 text-center">VEHÍCULOS USADOS</h1>
                            <% } %>
                                <div class="row mt-3" id="vehiculosNuevos">
                                    <% if (usuario) { %>
                                        <% vehiculos.forEach((vehiculo)=> { %>
                                            <% if (vehiculo.UsuarioAgrego===usuario.nombre &&
                                                vehiculo.certificacion==="usado" ) { %>
                                                <div class="col-md-4 mb-4 vehiculo" data-marca="<%= vehiculo.marca %>">
                                                    <div class="card">
                                                        <img src="<%= vehiculo.imagen %>" class="card-img-top"
                                                            alt="...">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= vehiculo.marca %> - <%= vehiculo.nombre %>
                                                            </h5>
                                                            <p class="card-text descripcion">
                                                                <%= vehiculo.descripcion %>
                                                                    <b>
                                                                        <p class="card-text">
                                                                            Precio: $<%=
                                                                                vehiculo.precio.toLocaleString('es-CO')
                                                                                %> COP</p>
                                                                    </b>
                                                                    <div class="d-flex align-items-center">
                                                                        <a href="/editar-vehiculo/<%= vehiculo.id %>"
                                                                            class="btn btn-primary mr-3">Editar</a>
                                                                        <form
                                                                            action="/borrar-vehiculo/<%= vehiculo.id %>"
                                                                            method="POST" class="d-inline">
                                                                            <button type="submit"
                                                                                class="btn btn-danger">Borrar</button>
                                                                        </form>
                                                                    </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <p>No se ha iniciado sesión.</p>
                                                            <% } %>
                                </div>
    </div>
    </div>
</body>


<script>
    // Manejar el cambio en los checkboxes de las marcas
    document.querySelectorAll('.form-check-input').forEach(function (checkbox) {
        checkbox.addEventListener('change', actualizarFiltro);
    });

    // Manejar el cambio en el select de certificación
    document.getElementById('filtroCertificacion').addEventListener('change', actualizarFiltro);

    // Función para actualizar el filtro
    function actualizarFiltro() {
        var marcasSeleccionadas = [];
        document.querySelectorAll('.form-check-input:checked').forEach(function (checkbox) {
            marcasSeleccionadas.push(checkbox.value);
        });

        var certificacionSeleccionada = document.getElementById('filtroCertificacion').value;

        // Mostrar/ocultar los divs de los vehículos según las marcas y certificación seleccionadas
        document.querySelectorAll('.vehiculo').forEach(function (vehiculo) {
            var marca = vehiculo.getAttribute('data-marca');
            var certificacion = vehiculo.getAttribute('data-certificacion');

            if ((marcasSeleccionadas.length === 0 || marcasSeleccionadas.includes(marca)) &&
                (certificacionSeleccionada === 'todos' || certificacion === certificacionSeleccionada)) {
                vehiculo.style.display = 'block';
            } else {
                vehiculo.style.display = 'none';
            }
        });
    }

</script>

<script>
    // Manejar el cambio en los checkboxes
    document.querySelectorAll('.form-check-input').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            // Obtener las marcas seleccionadas
            var marcasSeleccionadas = [];
            document.querySelectorAll('.form-check-input:checked').forEach(function (checkbox) {
                marcasSeleccionadas.push(checkbox.value);
            });

            // Mostrar/ocultar los divs de los vehículos según las marcas seleccionadas
            document.querySelectorAll('.vehiculo').forEach(function (vehiculo) {
                var marca = vehiculo.getAttribute('data-marca');
                if (marcasSeleccionadas.length === 0 || marcasSeleccionadas.includes(marca)) {
                    vehiculo.style.display = 'block';
                } else {
                    vehiculo.style.display = 'none';
                }
            });
        });
    });
</script>

<!-- JavaScript para ocultar el contenido -->
<script>
    document.getElementById('showContentButton').addEventListener('click', function () {
        var confirmation = confirm("¿Estás seguro de que ya sabes cómo usarlo? Esta información no volverá a mostrarse.");

        if (confirmation) {
            document.getElementById('contentToShow').classList.add('d-none');
            document.getElementById('showContentButton').classList.add('d-none');
        }
    });
</script>

<script>
    // Obtener el campo de entrada y la imagen de previsualización
    const inputImagen = document.getElementById('imagen');
    const imagenPreview = document.getElementById('preview');

    // Agregar un evento de cambio al campo de entrada
    inputImagen.addEventListener('input', () => {
        // Obtener el valor del campo de entrada
        const imageUrl = inputImagen.value;

        // Actualizar la fuente de la imagen de previsualización con la URL ingresada
        imagenPreview.src = imageUrl;
    });
</script>


<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

</html>
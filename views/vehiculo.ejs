                <option value="">Selecciona una marca</option>
                <option value="Toyota">Toyota</option>
                <option value="BMW">BMW</option>
                <option value="Mercedez-Benz">Mercedez-Benz</option>
                <option value="Chevrolet">Chevrolet</option>
                <option value="Renault">Renault</option>
                <option value="Nissan">Nissan</option>
                </select>
            </div>
            <div class="form-group">
                <label for="modelo">Nombre</label>
                <input type="text" class="form-control" id="modelo" name="modelo" style="font-size: 25px;" required>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" style="font-size: 25px;"
                    required></textarea>
            </div>
            <div class="form-group">
                <label for="certificacion">Certificación</label>
                <select class="form-control" id="certificacion" name="certificacion" style="font-size: 25px;" required>
                    <% if (usuario && usuario.rol==='admin' || usuario.rol==='superadmin' ) { %>
                        <option value="nuevo">Nuevo</option>
                        <option value="usado">Usado</option>
                        <% } else { %>
                            <option value="usado">Usado</option>
                            <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="precio">Precio (SIN COMAS NI PUNTOS)</label>
                <input type="number" class="form-control" id="precio" name="precio" style="font-size: 25px;" required
                    pattern="[0-9]*" title="Ingrese solo números">
            </div>

            <div class="mb-3">
                <label for="imagen" class="form-label">DIRECCIÓN DE LA IMAGEN</label>
                <input type="text" class="form-control" id="imagen" name="imagen" style="font-size: 25px;" required>
